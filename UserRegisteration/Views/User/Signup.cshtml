@model User
@{
    ViewData["Title"] = "SignUp";
}
@section Scripts{
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
<div class="container">
    <h3 class="text-bg-dark text-center">Sign Up</h3>
</div>

<form asp-action="SignUp" method="post">
    <div class="container">

    <label asp-for="UserName" class="form-label"></label>
    <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
        <br />

    <label asp-for="UserEmail" class="form-label mt-1"></label>
    <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
    <label asp-for="Password" class="form-label mt-1"></label>
    <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
    <label asp-for="ConfirmPassword" class="form-label mt-1"></label>
    <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <br />
    <label asp-for="Date_of_Birth" class="form-label mt-1"></label>
    <input asp-for="Date_of_Birth" class="form-control" />
        <span asp-validation-for="Date_of_Birth" class="text-danger"></span>
        <br />
    <label asp-for="Gender" class="form-label mt-1"></label>
    <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
        <br />
    <button type="submit" class="btn btn-primary mt-1">Sign Up</button>
 @*        <a asp-action="SignUp" class="btn btn-primary" asp-controller="User"> route</a> *@
    </div>
</form>

