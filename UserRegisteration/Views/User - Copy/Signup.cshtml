@model User
@{
    ViewData["Title"] = "SignUp";
}
@section Scripts{
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

<form asp-action="Login" method="post">
    <div class="container">

    <input asp-for="UserId" class="form-control" hidden readonly />

    <label asp-for="UserName" class="form-label"></label>
    <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
        <br />

    <label asp-for="UserEmail" class="form-label mt-1"></label>
    <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
        <br />
    <label asp-for="Password" class="form-label mt-1"></label>
    <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
    <label asp-for="ConfirmPassword" class="form-label mt-1"></label>
    <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <br />
    <label asp-for="Date_of_Birth" class="form-label mt-1"></label>
    <input asp-for="Date_of_Birth" class="form-control" />
        <span asp-validation-for="Date_of_Birth" class="text-danger"></span>
        <br />
    <label asp-for="Gender" class="form-label mt-1"></label>
    <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
        <br />
    <button type="submit" class="btn btn-primary mt-1">Sign Up</button>
    </div>
</form>

