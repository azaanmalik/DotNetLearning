@model User
@{
    ViewBag.Title = "Delete User";
}
<body>
<div class="mb-5">
<h2>Confirm Deletion</h2>
</div>
<div class="mb-2">
<h3>Confirm @Model.UserName Do you Really Want to Delete Account?</h3>
</div>
<div class="mt-3">

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserId" />
    <Button type="submit" class="btn btn-primary">Confirm Delete</Button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel Deletion</a>
</form>

</div>
</body>










