@model User
@{
    ViewBag.Title = $"{ViewBag.Action}";
}

<body class="d-flex justify-content-center align-items-center bg-light min-vh-50">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <form asp-action="Edit" method="post" class="p-2 rounded shadow bg-white" style="max-width: 500px; width: 100%;">
           
            <h2>@ViewBag.Action</h2>


            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-2">
                <a asp-for="UserName" class="form-label text-decoration-none text-black">Name</a>
                <input asp-for="UserName" class="form-control" />
            </div>

            <div class="mb-2">
                <a asp-for="UserEmail" class="form-label text-decoration-none text-black">Email</a>
                <input asp-for="UserEmail" class="form-control" />
            </div>


            <div class="mb-2">
                <label asp-for="Password" class="form-label text-decoration-none text-black">Password</label>
                <input asp-for="Password" class="form-control" type="text" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ConfirmPassword" class="form-label text-decoration-none text-black">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="text" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <div class="mb-2">
                <a asp-for="Date_of_Birth" class="form-label text-decoration-none text-black">Date of Birth</a>
                <input asp-for="Date_of_Birth" class="form-control" type="date" />
            </div>

            <div class="mb-2">
                <a asp-for="Gender" class="form-label text-decoration-none text-black">Gender</a>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Male" id="genderMale" />
                    <label class="form-check-label" for="genderMale">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Female" id="genderFemale" />
                    <label class="form-check-label" for="genderFemale">Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="UserId" />

            <!-- Buttons Container -->
            <div class="d-flex justify-content-center mt-2">
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
            </div>  
           
        </form>
    </div>
</body>